{
  "name": "remanees",
  "version": "1.0.0",
  "description": "A reminders' full stack web app.",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\" ",
    "server": "nodemon ./src/server.ts --ignore client/",
    "client": "cd ./client && npm run dev",
    "build": "npm run install-client && npm install && rm -rf ./dist/* && npx tsc",
    "install-client": "cd ./client && npm run build",
    "start": "cd ./dist && node server"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3",
    "typescript": "^5.0.4",
    "validator": "^13.9.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.11",
    "@types/validator": "^13.7.15",
    "concurrently": "^8.0.1",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1"
  }
}
